@model SchoolManagementSystem.Models.Class

<h2>Edit</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="ClassId" />
    <div class="form-group">
        <label asp-for="ClassName" class="control-label">Class Name</label>
        <input asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherId" class="control-label">Teacher ID</label>
        <input asp-for="TeacherId" class="form-control" />
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
