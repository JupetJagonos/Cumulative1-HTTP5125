@model IEnumerable<SchoolManagementSystem.Models.Teacher>

<h2>Teachers</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <td>ID</td>
            <th>Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.Name</td>
                <td>@teacher.HireDate.ToShortDateString()</td>
                <td>@teacher.Salary.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
